<html>
  <head>
    <title>厨房</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <link href="/public/assets/css/kitchen.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body id ="b">
    <div id = "dimScreen">
      <% for (var [key, value] of items.entries()) { %>
        
        <div class="column">
          <div id = "orderDetail">
            <p><%= key %></p>
          </div>
          <div id = "description">
            <p>数量：<%= value %></p>
          </div>
          
        </div>
        
      <% } %>
      
    </div>
    <script type="text/javascript">
      var socket = io(); // 收到广播
      socket.on('increment', function(obj){
        console.log(obj);
        var $jobs = $('<div id = "dimScreen"></div>');
        for(var key in obj) {
          console.log(key);
          $jobs.append(`<div class="column" style = "width: 33.33%;height: 33.33%;margin: auto;float: left">
          <div id = "orderDetail">
            <p>${key}</p>
          </div>
          <div id = "description">
            <p>数量：${obj[key]}</p>
          </div> </div>`);
        }
        $('#b').html($jobs);
      });
  </script>
  </body>
</html>